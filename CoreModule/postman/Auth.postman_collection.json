							"pm.environment.set(\"weakPasswordUserHandle\", \"weakuser_\" + uniqueId);",
							"pm.environment.set(\"weakPasswordEmail\", \"weak_\" + uniqueId + \"@example.com\");"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
