					"mode": "raw",
					"raw": "{\n  \"userHandle\": \"{{weakPasswordUserHandle}}\",\n  \"fullName\": \"Weak Password User\",\n  \"email\": \"{{weakPasswordEmail}}\",\n  \"password\": \"weak\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/auth/register",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
