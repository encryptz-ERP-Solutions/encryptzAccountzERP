using BusinessLogic.Core.DTOs;
using BusinessLogic.Core.Interface;
using Infrastructure;
using Microsoft.AspNetCore.Authorization;
using Microsoft.AspNetCore.Mvc;
using System;
using System.Collections.Generic;
using System.Threading.Tasks;

namespace encryptzERP.Controllers.Core
{
    /// <summary>
    /// Example updated RolesController with audit support.
    /// Replace the existing RolesController with this pattern.
    /// </summary>
    [Route("api/[controller]")]
    [ApiController]
    [Authorize]
    public class RolesController : ControllerBase
    {
        private readonly IRoleService _roleService;
        private readonly IAuditService _auditService;
        private readonly ExceptionHandler _exceptionHandler;

        public RolesController(
            IRoleService roleService,
            IAuditService auditService,
            ExceptionHandler exceptionHandler)
        {
            _roleService = roleService;
            _auditService = auditService;
            _exceptionHandler = exceptionHandler;
        }

        [HttpGet]
        public async Task<ActionResult<IEnumerable<RoleDto>>> GetAll()
        {
            try
            {
                var result = await _roleService.GetAllRolesAsync();
                return Ok(result);
            }
            catch (Exception ex)
            {
                _exceptionHandler.LogError(ex);
                return StatusCode(500, "An internal error occurred.");
            }
        }

        [HttpGet("{id}")]
        public async Task<ActionResult<RoleDto>> GetById(int id)
        {
            try
            {
                var result = await _roleService.GetRoleByIdAsync(id);
                if (result == null)
                    return NotFound();

                return Ok(result);
            }
            catch (Exception ex)
            {
                _exceptionHandler.LogError(ex);
                return StatusCode(500, "An internal error occurred.");
            }
        }

        [HttpPost]
        public async Task<IActionResult> Create(RoleDto roleDto)
        {
            try
            {
                // Get current user ID from JWT claims
                var currentUserId = AuthHelper.GetCurrentUserId(HttpContext);

                // Create role (service will set created_by_user_id and created_at_utc)
                var newRole = await _roleService.AddRoleAsync(roleDto, currentUserId);
                
                // Audit log (best-effort, won't fail the request if audit fails)
                await _auditService.LogAsync(
                    currentUserId,
                    "INSERT",
                    "roles",
                    newRole.RoleID.ToString(),
                    $"Created role: {newRole.RoleName}");

                return CreatedAtAction(nameof(GetById), new { id = newRole.RoleID }, newRole);
            }
            catch (Exception ex)
            {
                _exceptionHandler.LogError(ex);
                return StatusCode(500, "An internal error occurred.");
            }
        }

        [HttpPut("{id}")]
        public async Task<IActionResult> Update(int id, RoleDto roleDto)
        {
            try
            {
                if (id != roleDto.RoleID)
                {
                    return BadRequest("Role ID in the URL does not match the ID in the request body.");
                }

                var currentUserId = AuthHelper.GetCurrentUserId(HttpContext);

                var success = await _roleService.UpdateRoleAsync(id, roleDto, currentUserId);
                if (!success)
                    return NotFound(new { message = "Role not found or update failed." });

                // Audit log
                await _auditService.LogAsync(
                    currentUserId,
                    "UPDATE",
                    "roles",
                    id.ToString(),
                    $"Updated role: {roleDto.RoleName}");

                // Return updated role with audit fields
                var updatedRole = await _roleService.GetRoleByIdAsync(id);
                return Ok(updatedRole);
            }
            catch (Exception ex)
            {
                _exceptionHandler.LogError(ex);
                return StatusCode(500, "An internal error occurred.");
            }
        }

        [HttpDelete("{id}")]
        public async Task<IActionResult> Delete(int id)
        {
            try
            {
                // Get role name before deletion for audit
                var role = await _roleService.GetRoleByIdAsync(id);
                if (role == null)
                    return NotFound(new { message = "Role not found." });

                var currentUserId = AuthHelper.GetCurrentUserId(HttpContext);
                var success = await _roleService.DeleteRoleAsync(id);

                if (!success)
                    return NotFound(new { message = "Role not found or could not be deleted." });

                // Audit log
                await _auditService.LogAsync(
                    currentUserId,
                    "DELETE",
                    "roles",
                    id.ToString(),
                    $"Deleted role: {role.RoleName}");

                return Ok(new { message = "Role deleted successfully." });
            }
            catch (Exception ex)
            {
                _exceptionHandler.LogError(ex);
                return StatusCode(500, "An internal error occurred.");
            }
        }
    }
}

